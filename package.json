{
  "name": "world-cup-2018",
  "productName": "WorldCup 2018",
  "version": "0.2.0",
  "description": "Live World Cup 2018 scores in your menu bar",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-packager . --icon=icon/icon.icns --out=build --overwrite --osx-sign.type=distribution",
    "package": "electron-installer-dmg \"build/WorldCup 2018-darwin-x64/WorldCup 2018.app\" \"WorldCup 2018\" --icon=icon/icon.icns --out=build --overwrite"
  },
  "dependencies": {
    "about-window": "^1.11.1",
    "electron-packager": "^12.1.0",
    "lodash": "^4.17.10",
    "moment": "^2.22.2",
    "node-fetch": "^2.1.2"
  },
  "devDependencies": {
    "electron": "^2.0.2",
    "electron-installer-dmg": "^1.0.0"
  }
}
